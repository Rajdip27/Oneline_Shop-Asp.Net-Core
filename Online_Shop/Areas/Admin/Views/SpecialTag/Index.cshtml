@using Online_Shop.Models;
@model IEnumerable<specialTag>
@{
    ViewData["Title"] = "Index";
}
<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tag List</h2>

    </div>
    <div class="col-6 text-right">
       <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus"></i> &nbsp; New Special Tag</a>

    </div>

</div>
<br />
<div>
    <table class="table table-striped border" >
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression:c=>c.specialTageName)
            </th>
            <th></th>
            <th></th>

        </tr>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.specialTageName</td>

                    <td>
                                 <partial name="_TagPageButtonPartial" model="@item.Id"/>
                    </td>
                </tr>

        }

    </table>
</div>
@section scripts{
            <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
            <script type="text/javascript">
                    $(function(){
                        var save = '@TempData["Save"]'
                    if(save!='') {
                        alertify.success(save);
                    }
                        var edit = '@TempData["Update"]'
                    if(edit!='') {
                        alertify.success(edit);
                    }
                        var del = '@TempData["Delete"]'
                    if (del!='') {
                        alertify.error(del);
                    }
                })




            </script>
}
