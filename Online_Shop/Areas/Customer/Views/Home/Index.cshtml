@using Online_Shop
@model List<Products>
@{
    ViewData["Title"] = "Index";
}
<style>
    
</style>

<br />
<br />
<div class="row">
    @foreach(var product in Model)
     {
        <div class="col-4">
            <div class="card mb-4" >
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;">@product.Name</label>
                    </h4>

                </div>
                <img src="/@product.Image" class="card-img-top" style="height:300px; " />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313"><b>Price:@product.Price</b></label>

                        </div>
                        <div>
                            <a asp-action="Detail"   asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-success btn-sm ">Deatils</a>
                        </div>
                    </div>

                </div>

            </div>


        </div>





     }


</div>

